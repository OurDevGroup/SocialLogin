
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
	<head>		
		<script>
			if(!window.jQuery)
			{
			   var script = document.createElement('script');
			   script.type = "text/javascript";
			   script.src = "http://code.jquery.com/jquery-latest.pack.js";
			   document.getElementsByTagName('head')[0].appendChild(script);
			}
		</script>
		<script src="http://js.live.net/v5.0/wl.js" type="text/javascript"></script>
		<script type="text/javascript">
			var APPLICATION_CLIENT_ID = "00000000480EE83D",
			REDIRECT_URL = "http://dev2.web.mcg.demandware.net/on/demandware.store/Sites-jtv-Site/default/Live-Test";

			WL.init({
				client_id: APPLICATION_CLIENT_ID,
				scope: ["wl.signin", "wl.emails"],
				response_type: "token"
			});			
			
			WL.getLoginStatus(function(response) { if(response.status != "connected") WL.Event.subscribe("auth.login", onLogin); else WL.Event.subscribe("auth.logout", onLogout); });
			
			WL.Event.subscribe("auth.sessionChange", onSessionChange);
			
			WL.ui({
				name: "signin",
				element: "signInButton",
				display:"page"
			});
			
			function onLogin() {
				WL.Event.subscribe("auth.logout", onLogout);
				WL.Event.unsubscribe("auth.login");
				
				var session = WL.getSession();

				WL.api(
					{
						path: "me",
						method: "GET"
					},
					function (response) {
						
					});
			}
			
			function onSessionChange() {
				var session = WL.getSession();
				
				if (session) {
					postwith(REDIRECT_URL, {token:session.access_token});
				}
			}
			
			function onLogout() {
				WL.Event.subscribe("auth.login", onLogin);
				WL.Event.unsubscribe("auth.logout");
			}
			
			function postwith (to,p) {
				  var myForm = document.createElement("form");
				  myForm.method="post" ;
				  myForm.action = to ;
				  for (var k in p) {
				    var myInput = document.createElement("input") ;
				    myInput.setAttribute("name", k) ;
				    myInput.setAttribute("value", p[k]);
				    myForm.appendChild(myInput) ;
				  }
				  document.body.appendChild(myForm) ;
				  myForm.submit() ;
				  document.body.removeChild(myForm) ;
				}

		</script>
	</head>
	<body>
		<div id="signInButton"></div>
	</body>
</html>
